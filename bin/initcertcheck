import os
import sys

current_path = os.path.dirname(__file__)
src_path = os.path.abspath(os.path.join(current_path, "../src"))
sys.path.insert(0, src_path)
from certutil import *


def certLogger(domain, exitnode, error, fingerprint, exception, probeid):
    print('%d,%s,%s' % (probeid, domain, fingerprint))


print('id,webpage,fingerprint')
readCert(sitelist='top-1m.csv', certErrorLogger=certLogger, exit_fpr='<noTor>')
# readCert(sitelist='special.csv', certErrorLogger=certLogger, exit_fpr='<noTor>')

